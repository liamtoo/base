{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes, constrain = [
    'region-' ~ region|clean_class,
  ],
  [
    'header',
    'navigation',
    'prefix',
    'sidebar_first',
    'content',
    'sidebar_second',
    'postfix',
    'pre_footer',
    'footer'
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if region in constrain %}<div class="l-constrain">{% endif %}
      {{ content }}
      <div class="copyright">&copy; {{ "now"|date("Y") }} {% trans %} Opin Base Theme {% endtrans %}</div>
    {% if region in constrain %}</div>{% endif %}
  </div>
{% endif %}
